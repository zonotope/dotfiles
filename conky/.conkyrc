conky.config = {

------------------------------------------------------------------------------
-- behavior                                                                 --
------------------------------------------------------------------------------

        update_interval = 1.0,
        total_run_times = 0,
        cpu_avg_samples = 2,
        background = true,
        override_utf8_locale = false,

        -- buffers
        no_buffers = true,
        double_buffer = true,


        -- widgets/labels
        pad_percents = 3,
        use_spacer = 'left',
        short_units = true,

        -- font
        use_xft = true,
        font = 'Inconsolata:size=15',
        xftalpha = 1,
        uppercase = false,

------------------------------------------------------------------------------
-- window                                                                   --
------------------------------------------------------------------------------

        own_window = true,
        own_window_type = 'dock',
        -- own_window_transparent = true,
        -- own_window_argb_visual = true,
        own_window_hints = 'undecorated,below,sticky,skip_taskbar,skip_pager',

        -- size/placement
        alignment = 'bottom_right',
        maximum_width = 20000000,
        minimum_width = 1400, minimum_height = 24,
        gap_x = 10,
        gap_y = 10,

        -- shades and borders
        draw_shades = false,
        draw_outline = false,
        draw_borders = false,
        draw_graph_borders = false,


------------------------------------------------------------------------------
-- colors (Tomorrow Night Eighties)                                         --
------------------------------------------------------------------------------

        own_window_colour = '#2d2d2d',
        default_color = '#cccccc',

        color0 = '#f2777a', -- red
        color1 = '#f99157', -- orange
        color2 = '#ffcc66', -- yellow
        color3 = '#99cc99', -- green
        color4 = '#66cccc', -- aqua
        color5 = '#6699cc', -- blue
        color6 = '#cc99cc', -- purple
};

------------------------------------------------------------------------------
-- output                                                                   --
------------------------------------------------------------------------------

conky.text = [[
${alignr}\
cpu0: \
${voffset 1}${color1}${cpugraph cpu1 20,125}${color}${voffset -1}${cpu cpu1}% | \
cpu1: \
${voffset 1}${color1}${cpugraph cpu2 20,125}${color}${voffset -1}${cpu cpu2}% | \
cpu2: \
${voffset 1}${color1}${cpugraph cpu3 20,125}${color}${voffset -1}${cpu cpu3}% | \
cpu3: \
${voffset 1}${color1}${cpugraph cpu4 20,125}${color}${voffset -1}${cpu cpu4}% | \
ram: \
${if_match ${memperc}<50}${color3}\
${else}${if_match ${memperc}>=80}${color0}\
${else}${if_match ${memperc}<80}${color2}\
${endif}\
${endif}\
${endif}\
${voffset 1}${membar 7,125}${voffset -1}${color} ${memperc}% | \
/: \
${if_match ${fs_used_perc}<66}${color3}\
${else}${if_match ${fs_used_perc}>=90}${color0}\
${else}${if_match ${fs_used_perc}<90}${color2}\
${endif}\
${endif}\
${endif}\
${voffset 1}${fs_bar 7,125 /}${voffset -1}${color} ${fs_used_perc /}% | \
up: ${color5}${upspeedgraph wlp4s0 20,125}${color} ${upspeed wlp4s0} | \
down: ${color5}${downspeedgraph wlp4s0 20,125}${color} ${downspeed wlp4s0} | \
bat: \
${if_match ${battery_percent}>60}${color3}\
${else}${if_match ${battery_percent}>=20}${color2}\
${else}${if_match ${battery_percent}<20}${color0}\
${endif}\
${endif}\
${endif}\
${voffset 1}${battery_bar 7,125}${voffset -1} ${color}${battery_percent}% | \
${font Inconsolata:bold:size=15}${time %a %b %d %Y. %l:%M%P}
]];
