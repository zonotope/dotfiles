## size/placement
alignment tl
maximum_width 20000000
minimum_size 1400 24
gap_x 17
gap_y 5

background yes

## font
use_xft yes
xftfont Inconsolata:size=15
xftalpha 1

update_interval 1.0
total_run_times 0
double_buffer yes

no_buffers yes
cpu_avg_samples 2
override_utf8_locale no

uppercase no
pad_percents 2d
use_spacer left
short_units

## shades and borders
draw_shades no
draw_outline no
draw_borders no
draw_graph_borders no

## window
own_window yes
own_window_transparent yes
own_window_type desktop
own_window_hints undecorated,below,sticky,skip_taskbar,skip_pager
own_window_colour white

## colors
default_color black
color1 ff0000
color2 ff8000
color3 ffff00
color4 80ff00
color5 00ff00
color6 00ff80
color7 00ffff

allgood 3fb836
caution

##############################################
#  Output
##############################################
TEXT
${alignr}cpu0: ${voffset 1}${color indianred}${cpugraph cpu1 20,130}${color}${voffset -1}${cpu cpu1}% | cpu1: ${voffset 1}${color indianred}${cpugraph cpu2 20,130}${color}${voffset -1}${cpu cpu2}% | cpu2: ${voffset 1}${color indianred}${cpugraph cpu3 20,130}${color}${voffset -1}${cpu cpu3}% | cpu3: ${voffset 1}${color indianred}${cpugraph cpu4 20,130}${color}${voffset -1}${cpu cpu4}% | \
ram: \
${if_match ${memperc}<50}${color forestgreen}\
${else}${if_match ${memperc}>=80}${color darkred}\
${else}${if_match ${memperc}<80}${color gold}\
${endif}\
${endif}\
${endif}\
${voffset 1}${membar 7,130}${voffset -1}${color} ${memperc}% | \
/: \
${if_match ${fs_used_perc}<50}${color forestgreen}\
${else}${if_match ${fs_used_perc}>=80}${color darkred}\
${else}${if_match ${fs_used_perc}<80}${color gold}\
${endif}\
${endif}\
${endif}\
${voffset 1}${fs_bar 7,130 /}${voffset -1}${color} ${fs_used_perc /}% | \
up: ${color steelblue}${upspeedgraph wlp3s0 20,130}${color} ${upspeed wlp3s0} | \
down: ${color steelblue}${downspeedgraph wlp3s0 20,130}${color} ${downspeed wlp3s0} | \
bat: \
${if_match ${battery_percent}>60}${color forestgreen}\
${else}${if_match ${battery_percent}>=20}${color gold}\
${else}${if_match ${battery_percent}<20}${color darkred}\
${endif}\
${endif}\
${endif}\
${voffset 1}${battery_bar 7,130}${voffset -1} ${color}${battery_percent}% | \
${font Inconsolata:bold:size=15}${time %a, %b %d %Y. %l:%M%P}
