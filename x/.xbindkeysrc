############################################################################
# Control the volume with amixer                                           #
############################################################################

"amixer -c 0 set Master 1dB- unmute"
    XF86AudioLowerVolume

"amixer -c 0 set Master 1dB+ unmute"
    XF86AudioRaiseVolume

"amixer -c 0 set Master toggle"
     XF86AudioMute


############################################################################
# Brightness                                                               #
############################################################################

"xbacklight -dec 5"
  XF86MonBrightnessDown

"xbacklight -inc 5"
  XF86MonBrightnessUp
