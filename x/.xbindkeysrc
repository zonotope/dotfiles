############################################################################
# volume                                                                   #
############################################################################

"volume -nwz -i 5"
   XF86AudioRaiseVolume

"volume -nwz -d 5"
   XF86AudioLowerVolume

"volume -nwzm"
   XF86AudioMute

############################################################################
# Brightness                                                               #
############################################################################

"xbacklight -dec 5"
  XF86MonBrightnessDown

"xbacklight -inc 5"
  XF86MonBrightnessUp
