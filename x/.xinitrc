#!/bin/sh

############################################################################
# execute scripts in xinitrc.d                                             #
############################################################################

if [ -d /etc/X11/xinit/xinitrc.d ]; then
  for f in /etc/X11/xinit/xinitrc.d/*; do
    [ -x "$f" ] && . "$f"
  done
  unset f
fi

############################################################################
# load xresources                                                          #
############################################################################

[[ -f ~/.Xresources ]] && xrdb -merge -I$HOME ~/.Xresources

############################################################################
# load xprofile                                                            #
############################################################################

[ -f /etc/xprofile ] && . /etc/xprofile
[ -f ~/.xprofile ] && . ~/.xprofile

############################################################################
# load window manager                                                      #
############################################################################

stumpwm
